{
	"name": "clearcom-station-ic",
	"version": "0.2.6",
	"main": "dist/main.js",
	"type": "module",
	"scripts": {
		"postinstall": "husky",
		"format": "prettier -w .",
		"package": "yarn build && companion-module-build",
		"package-dev": "yarn build && companion-module-build --dev",
		"build": "rimraf dist && yarn build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"dev": "tsc -p tsconfig.build.json --watch",
		"lint:raw": "eslint",
		"lint": "yarn lint:raw ."
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/MeestorX/companion-module-clearcom-station-ic.git"
	},
	"engines": {
		"node": "^22.4"
	},
	"dependencies": {
		"@companion-module/base": "~1.11.3"
	},
	"devDependencies": {
		"@companion-module/tools": "^2.1.1",
		"@types/node": "^22.13.4",
		"eslint": "^9.20.1",
		"husky": "^9.1.7",
		"lint-staged": "^15.4.3",
		"prettier": "^3.5.1",
		"rimraf": "^6.0.1",
		"typescript": "~5.7.3",
		"typescript-eslint": "^8.24.1"
	},
	"prettier": "@companion-module/tools/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	},
	"packageManager": "yarn@4.4.1"
}
